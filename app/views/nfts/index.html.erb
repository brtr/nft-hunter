<div class="sidebar-enabled sidebar-end">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 content py-5 mb-2 mb-sm-0 pb-sm-5" style="height:88vh">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Rank</th>
              <th scope="col">
                <%= link_to "Name", nfts_path(sort_by: "Name", sort: @sort) %>
              </th>
              <th scope="col">Rank 24H</th>
              <th scope="col">Rank 3D</th>
              <th scope="col">Floor Price</th>
              <th scope="col" data-bs-toggle="tooltip" title="Blue chip holder percentage: number of holders that have atleast one other blue chip project/ Number of total holders">
                <%= link_to "BCHP", nfts_path(sort_by: "bchp", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "Holding Median", nfts_path(sort_by: "median", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "24h", nfts_path(sort_by: "variation", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "Volume", nfts_path(sort_by: "volume_24h", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "Sales", nfts_path(sort_by: "sales_24h", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "Listed / Supply Ratio", nfts_path(sort_by: "listed_ratio", sort: @sort) %>
              </th>
              <th scope="col">
                <%= link_to "Floor Cap", nfts_path(sort_by: "floor_cap", sort: @sort) %>
              </th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @nfts.each do |nft| %>
              <% next if nft.user_id %>
              <tr>
                <td style="width: 3%"><%= nft.eth_volume_rank %></td>
                <td>
                  <%= link_to nft_path(nft.slug), class: "nft-name" do %>
                    <%= image_tag logo_path(nft.slug, nft.logo), class: "rounded-circle small-logo" %>
                    <span class="text-dark"><%= nft.name.humanize %></span>
                  <% end %>
                </td>
                <td class="text-<%= change_text_color(nft.volume_rank_24h.to_f) %>" data-bs-toggle="tooltip" title='<%= "#{nft.eth_volume_rank_24h} -> #{nft.eth_volume_rank}" %>'><%= nft.volume_rank_24h %></td>
                <td class="text-<%= change_text_color(nft.volume_rank_3d.to_f) %>" data-bs-toggle="tooltip" title='<%= "#{nft.eth_volume_rank_3d} -> #{nft.eth_volume_rank}" %>'><%= nft.volume_rank_3d %></td>
                <td style="width: 10%">
                  <%= "#{decimal_format(nft.eth_floor_price_24h)} ETH" %>
                  <%= link_to nft.opensea_url, target: "_blank" do %>
                    <i class="ai-compass fs-lg me-2"></i>
                  <% end if nft.opensea_url %>
                </td>
                <td style="width: 6%"><%= "#{decimal_format(nft.bchp)} %" %></td>
                <td><%= "#{decimal_format(nft.median)} Days" %></td>
                <td style="width: 3%" class="text-<%= change_text_color(nft.variation.to_f) %>"><%= "#{nft.variation.to_f}%" %></td>
                <td style="width: 8%"><%= "#{decimal_format(nft.eth_volume_24h)} ETH" %></td>
                <td style="width: 3%"><%= nft.sales_24h %></td>
                <td><%= listed_and_supply_radio(nft) %></td>
                <td><%= "#{decimal_format(nft.eth_floor_cap)} ETH" %></td>
                <% if current_user && nft.user_id == current_user.id %>
                  <td style="width: 6%">
                    <%= link_to "Edit", edit_nft_path(nft.nft_id), class: "btn btn-link"  %>
                    <%= link_to "Sync data", sync_data_nft_path(nft.nft_id), class: "btn btn-link synBtn" %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="p-4">
          <%= paginate @nfts %>
        </div>
      </div>
      <!-- Sidebar-->
      <div class="sidebar col-lg-2 px-lg-3 py-lg-5">
        <div class="offcanvas offcanvas-end offcanvas-collapse" id="blog-sidebar">
          <div class="offcanvas-header navbar-shadow px-4 mb-3">
            <h5 class="mt-1 mb-0"><%= t("views.label.search") %></h5>
            <button class="btn-close lead" type="button" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body px-4 pt-3 pt-lg-0 pe-lg-0 ps-lg-2 ps-xl-4" data-simplebar>
            <!-- Search-->
            <div class="widget mb-5">
              <h4>Filter</h4>
              <%= search_form_for @q, url: nfts_path, method: :get do |f| %>
                <div class="mb-3 pb-1 col-12">
                  <%= f.label :eth_volume_24h, "24H Volume", class: "form-label d-block px-0" %>
                  <%= f.number_field :eth_volume_24h_gteq, class: "form-control inline-form" %>
                  To
                  <%= f.number_field :eth_volume_24h_lteq, class: "form-control inline-form" %>
                </div>
                <div class="mb-3 pb-1 col-12">
                  <%= f.label :eth_floor_price_24h, "Floor Price", class: "form-label d-block px-0" %>
                  <%= f.number_field :eth_floor_price_24h_gteq, class: "form-control inline-form" %>
                  To
                  <%= f.number_field :eth_floor_price_24h_lteq, class: "form-control inline-form" %>
                </div>
                <div class="mb-3 pb-1 col-12">
                  <%= f.label :sales_24h, "24H Sales", class: "form-label d-block px-0" %>
                  <%= f.number_field :sales_24h_gteq, class: "form-control inline-form" %>
                  To
                  <%= f.number_field :sales_24h_lteq, class: "form-control inline-form" %>
                </div>
                <div class="mb-3 pb-1 col-12">
                  <%= f.label :median, "Median Days", class: "form-label d-block px-0" %>
                  <%= f.number_field :median_gteq, class: "form-control inline-form" %>
                  To
                  <%= f.number_field :median_lteq, class: "form-control inline-form" %>
                </div>
                <div class="mb-3 pb-1 col-12">
                  <%= f.label :bchp, "BCHP", class: "form-label d-block px-0" %>
                  <%= f.number_field :bchp_gteq, class: "form-control inline-form" %>
                  To
                  <%= f.number_field :bchp_lteq, class: "form-control inline-form" %>
                </div>
                <div class="mb-3 pb-1">
                  <%= f.submit "Apply Filters", class: 'btn btn-primary mt-3 mt-sm-0' %>
                  <%= link_to "Reset", nfts_path, class: 'btn btn-default' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>