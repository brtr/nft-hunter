<!DOCTYPE html>
<html>
  <head>
    <title>Nft-Hunter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript" src="https://app.web3ads.net/main.js" async></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JZYBEV4DG6"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-JZYBEV4DG6');
    </script>
  </head>

  <body data-theme="dark">
    <div class="wrapper">
      <nav id="sidebar" class="sidebar">
        <div class="sidebar-content js-simplebar" data-simplebar="init">
          <a class="sidebar-brand" href="/">
            <%= image_tag "logo.png", size: "50x50" %>
            NFT Hunter
          </a>
          <!-- Menu-->
          <ul class="sidebar-nav">
            <li class="sidebar-item <%= @page_index == 0 ? 'active' : '' %>">
              <%= link_to root_path, class: "sidebar-link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-layout align-middle"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>
                <span class="align-middle">Home</span>
              <% end %>
            </li>
            <li class="sidebar-item <%= @page_index.in?([1, 2]) ? 'active' : '' %>">
              <%= link_to '#', class: "sidebar-link", data: {"bs-target": "#rank-pages"} do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-list align-middle"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3.01" y2="6"></line><line x1="3" y1="12" x2="3.01" y2="12"></line><line x1="3" y1="18" x2="3.01" y2="18"></line></svg>
                <span class="align-middle">Rank</span>
              <% end %>
              <ul class="sidebar-dropdown list-unstyled" data-bs-parent="#sidebar" id="rank-pages">
                <li class="sidebar-item <%= @page_index == 1 ? 'active' : '' %>">
                  <%= link_to purchase_rank_nfts_path, class: "sidebar-link" do %>
                    <span class="align-middle">Purchase Top 10</span>
                  <% end %>
                </li>
                <li class="sidebar-item <%= @page_index == 2 ? 'active' : '' %>">
                  <%= link_to holding_rank_nfts_path, class: "sidebar-link" do %>
                    <span class="align-middle">Holding Top 10</span>
                  <% end %>
                </li>
              </ul>
            </li>
            <% if is_admin? %>
              <li class="sidebar-item <%= @page_index == 3 ? 'active' : '' %>">
                <%= link_to new_nft_path, class: "sidebar-link" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus align-middle me-2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                  <span class="align-middle">Add NFT</span>
                <% end %>
              </li>
              <li class="sidebar-item <%= @page_index == 5 ? 'active' : '' %>">
                <%= link_to nft_flip_records_path, class: "sidebar-link" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-layout align-middle"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>
                  <span class="align-middle">NFT Flip Record</span>
                <% end %>
              </li>
            <% end %>
            <li class="sidebar-item <%= @page_index == 4 ? 'active' : '' %>">
              <%= link_to extensions_path, class: "sidebar-link" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-share-2 align-middle"><circle cx="18" cy="5" r="3"></circle><circle cx="6" cy="12" r="3"></circle><circle cx="18" cy="19" r="3"></circle><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line></svg>
                <span class="align-middle">Extensions</span>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
      <div class="main">
        <nav class="navbar navbar-expand navbar-light navbar-bg">
          <a class="sidebar-toggle">
            <i class="hamburger align-self-center"></i>
          </a>
          <div class="d-flex align-items-center order-lg-3 ms-lg-auto loginBtns">
            <div class="navbar-tool dropdown connect-btn">
              <%= link_to "Connect Metamask", "#", class: "btn btn-warning", id: "loginBtn" %>
            </div>
            <div class="navbar-tool dropdown hide">
              <a href="#" role="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                <h4 id="login_address" class="d-inline-block"></h4>
              </a>
              <div class="dropdown-menu dropdown-menu-end">
                <% if is_admin? %>
                  <%= link_to user_nfts_path(current_user), class: "dropdown-item" do %>
                    <i class="ai-user fs-base me-2"></i>
                    <span>My NFTs</span>
                  <% end %>
                <% end %>
                <%= link_to "#", class: "dropdown-item", id: "logoutBtn" do %>
                  <i class="ai-log-out fs-base me-2"></i>
                  <span>Sign out</span>
                <% end %>
              </div>
            </div>
          </div>
        </nav>
        <main class="content">
          <%= render "layouts/notices" %>
          <%= yield %>
        </main>
      </div>
    </div>
    <div id="spinner" class="hide">
      <%= image_tag("loading.svg") %>
    </div>
  </body>
</html>
